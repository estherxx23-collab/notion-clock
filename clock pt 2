  <div class="widget">
    <div class="decor">⊹₊˚‧︵‿₊୨୧₊‿︵‧˚₊⊹</div>
    <div class="time" id="clock"></div>
    <div class="decor">⊹₊˚‧︵‿₊୨୧₊‿︵‧˚₊⊹</div>
  </div>

  <script>
    function updateClock() {
      const now = new Date();
      document.getElementById("clock").textContent =
        now.toLocaleTimeString([], {
          hour: "numeric",
          minute: "2-digit"
        });
    }

    updateClock();
    setInterval(updateClock, 1000);
  </script>
